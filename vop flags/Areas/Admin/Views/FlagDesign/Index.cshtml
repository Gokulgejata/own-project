@model List<Flagdesign>

<div class="container">
    <div class="row mb-3">
        <div class="col-md-6 text-uppercase">
            <h2>Flag Designs</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-area="Admin" asp-controller="FlagDesign" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create</a>
        </div>
    </div>
    <hr />
    @if(Model.Count()>0)
    {
        
    
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th class="text-center">FlagName</th>
                <th class="text-center">Types</th>
                <th class ="text-center">Action</th>
             
                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="40%">@item.FlagName</td>
                    <td width="40%">@item.Types</td>
                        <td id="table" class="d-flex align-items-center justify-content-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-area="Admin"  asp-controller="FlagDesign" asp-action="Details" asp-route-id="@item.Id"
                                   class="btn btn-info" data-toggle="tooltip" data-placement="top" title="Details">
                                    <i class="bi bi-info-circle"></i>
                                </a>
                                <a asp-area="Admin" asp-controller="FlagDesign" asp-action="Edit" asp-route-id="@item.Id"
                                   class="btn btn-warning" data-toggle="tooltip" data-placement="top" title="Edit">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-area="Admin" asp-controller="FlagDesign" asp-action="Delete" asp-route-id="@item.Id"
                                   class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                   
                </tr>
            }
        </tbody>
        </table>
    }
    else
    {
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="text-center text-uppercase text-warning">
                        No Designs to Show
                    </h2>
                </div>
             </div> 
        </div>
        
       
                   
    }
</div>
@section scripts{
    <script>
        $('.table').DataTable();
    </script>
}
