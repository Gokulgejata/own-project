@model Flagdesign
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-uppercase text-center">Edit Details</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 border-1 border">
            <form method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="@Model. FlagName" class="form-label"></label>
                    <input asp-for="@Model. FlagName" class="form-control" />
                    <span asp-validation-for="@Model.FlagName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model. Types" class="form-label"></label>
                    <input asp-for="@Model. Types" class="form-control" />
                    <span asp-validation-for="@Model.Types" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Flagview " class="form-label"></label>
                    <input type="file" name="files" id="upload box" class="form-control" />
                </div>

                <div class="mb-3">
                    <a asp-controller="FlagDesign" asp-action="Index" class="btn btn-danger">Back</a>
                    <button type="submit" class="btn btn-warning"><i class="bi bi-pencil-square"></i> Update</button>
                </div>
            </form>
        </div>
        <div class="col-md-4">
            @if (Model.Flagview != null)
            {
                <img src="@Model.Flagview" width="100%"/>
            }
        </div>
    </div>
</div>
@section scripts {
    <partial name="_ValidationScriptsPartial" />
}