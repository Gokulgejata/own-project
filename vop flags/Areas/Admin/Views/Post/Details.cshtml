@using Vopflag.Domain.ApplicationEnum
@model Post

<div class="container">
    <div class="card">
        <div class="card-header text-center text-uppercase">
            Post Details
        </div>
        <div class="card-body">
            <div class="row">
                <!-- Details Column -->
                <div class="col-md-8">
                    <div class="row">
                        <div class="col-md-4">
                            <p class="card-text text-uppercase"><strong>Id</strong></p>
                        </div>
                        <div class="col-md-8">
                            <p class="card-text">: @Model.Id</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <p class="card-text text-uppercase"><strong>Name</strong></p>
                        </div>
                        <div class="col-md-8">
                            <p class="card-text">: @Model.Name</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <p class="card-text text-uppercase"><strong>Material Type</strong></p>
                        </div>
                        <div class="col-md-8">
                            <p class="card-text">: @((FlagMaterialType)Model.FlagMaterialType)</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <p class="card-text text-uppercase"><strong>Price of Single Pieces</strong></p>
                        </div>
                        <div class="col-md-8">
                            <p class="card-text">: @Model.SinglePiecePrice</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <p class="card-text text-uppercase"><strong>Price of Single Bundle</strong></p>
                        </div>
                        <div class="col-md-8">
                            <p class="card-text">: @Model.SingleBundlePrice</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <p class="card-text text-uppercase"><strong>Bundle Availability</strong></p>
                        </div>
                        <div class="col-md-8">
                            <p class="card-text">: @((BundleAvailability)Model.BundleAvailability)</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <p class="card-text text-uppercase"><strong>Ratings</strong></p>
                        </div>
                        <div class="col-md-8">
                            <p class="card-text">: @Model.Ratings</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <p class="card-text text-uppercase"><strong>Created on</strong></p>
                        </div>
                        <div class="col-md-8">
                            <p class="card-text">: @((Model.CreatedOn == DateTime.MinValue) ? "NA" : Model.CreatedOn.ToString())</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <p class="card-text text-uppercase"><strong>Created By</strong></p>
                        </div>
                        <div class="col-md-8">
                            <p class="card-text">: @((Model.CreatedBy == string.Empty) ? "NA" : Model.CreatedBy)</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <p class="card-text text-uppercase"><strong>Modified On</strong></p>
                        </div>
                        <div class="col-md-8">
                            <p class="card-text">: @((Model.ModifiedOn == DateTime.MinValue) ? "NA" : Model.ModifiedOn.ToString())</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <p class="card-text text-uppercase"><strong>Modified By</strong></p>
                        </div>
                        <div class="col-md-8">
                            <p class="card-text">: @((Model.ModifiedBy == string.Empty) ? "NA" : Model.ModifiedBy)</p>
                        </div>
                    </div>
                </div>

                <!-- Image Column -->
                <div class="col-md-4 d-flex align-items-center justify-content-center">
                    <img src="@Model.FlagImage" class="img-thumbnail" alt="Flag Image" style="max-width: 100%; max-height: 250px; width: auto; height: auto;" />
                </div>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-md-12 text-center">
                <a asp-area="Admin" asp-controller="Post" asp-action="Index" class="btn btn-danger">Back</a>
            </div>
        </div>
    </div>
</div>
